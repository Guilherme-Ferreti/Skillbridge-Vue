{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "singleQuote": true,
  "singleAttributePerLine": true,
  "htmlWhitespaceSensitivity": "css",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "plugins": [
    "prettier-plugin-organize-imports", "prettier-plugin-organize-attributes", "prettier-plugin-css-order"
  ],
  "attributeGroups": ["$VUE_ATTRIBUTE", "$CODE_GUIDE" ]
}